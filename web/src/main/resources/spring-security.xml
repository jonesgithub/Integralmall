<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
    xmlns:context="http://www.springframework.org/schema/context"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd  
		http://www.springframework.org/schema/context  
		http://www.springframework.org/schema/context/spring-context-4.1.xsd  
		http://www.springframework.org/schema/security  
		http://www.springframework.org/schema/security/spring-security-4.0.xsd"> 	

   <!-- 认证管理器。用户名密码都集成在配置文件中 --> 
  <!--  <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="admin" password="admin" authorities="ROLE_ADMIN"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
     -->
    <!-- 根据用户名加载所有权限 -->
	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="userAuthService"></authentication-provider>
	</authentication-manager>
	
	<http>
		<csrf disabled="true"/>
		<form-login login-page="/login" login-processing-url="/login" 
			default-target-url="/admin/merchandise"/>
		<logout invalidate-session="true" logout-success-url="/login" logout-url="/logout"/>
		<!-- 如果没有access中的权限，却想访问pattern匹配的url，则会被重定向到form-login中的login-page属性定义的页面 -->
		<intercept-url pattern="/login" access="permitAll"/>
		<intercept-url pattern="/admin/**/add" access="hasRole('ROLE_ADD')"/>
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_VIEW')"/>
	</http>
</beans:beans>